{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType":"module"
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "max-len": ["error", 
      { 
        "code": 120,
        "ignoreTrailingComments": true,
        "ignoreUrls": true
      }
    ],
    "indent": [
      "error",
      "tab"
    ],
    "no-tabs": 0,
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "require-jsdoc": "off",
    "arrow-parens": "off"
  },
  "globals": {
    "PolymerElement": true,
    "suite": true,
    "test": true,
    "fixture": true,
    "assert": true,
    "WCT": true
  }
}
